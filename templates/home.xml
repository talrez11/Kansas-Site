<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>
		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			 <div class="kansas_wrap">
			 	<!-- NAV MENU -->
				 	<nav>
				 		<span>
				 			<img
				 				src="_BASEURL.'/site/images/logo.svg'"
				 				alt="logo"			 				
				 				cms:eval="src"
				 			/>
				 		</span>
				 		<span><cms:text constant="site_header"/></span>
				 	
				 		<a href="#"><cms:desktop><cms:text constant="phone"/></cms:desktop></a>
				 		
				 	</nav>
				 	<!-- HEADER SECTION -->
				 	<header>
				 		
				 		<span><cms:text constant="header_top"/></span>
				 		<span><cms:text constant="header_middle"/></span>
				 	<cms:desktop>	
				 		<span>
				 			<img
				 				src="_BASEURL.'/site/images/arrow-red.svg'"
				 				alt="arrow_red"
				 				cms:eval="src"
				 			/>
				 		</span>
				 	</cms:desktop>	
				 		<div class="phone_box">
				 			<span><cms:text constant="phone_title"/></span>
				 			<a href="#"><cms:text constant="phone"/></a>
				 		</div>				 		
				 <cms:desktop>
				 		<div class="service">
				 			<span><cms:text constant="emergency"/></span>
				 			<span><cms:text constant="auto"/></span>
				 			<span><cms:text constant="residental"/></span>
				 		</div>
				 </cms:desktop>
				 	</header>
				 	<!-- FORM SECTION -->
				 	<div class="contact">
				 		<span><cms:text constant="form_caption"/></span>
				 			<cms:module 
				 				name="contact_form" 
				 				action="show" 
				 				text_id="contact_form"
				 			/>
				 	</div>
				 	<!-- FEATURE SECTION -->
				 	<div class="feature">
				 		<div class="feature_desc">	 			
				 			<span><cms:text constant="feature_left"/></span>
				 			<span><cms:text constant="feature_left_desc"/></span>
				 		</div>
				 		<div class="feature_desc">
				 			<span><cms:text constant="feature_center"/></span>
				 			<span><cms:text constant="feature_center_desc"/></span>
				 		</div>
				 		<div class="feature_desc">
				 			<span><cms:text constant="feature_right"/></span>
				 			<span><cms:text constant="feature_right_desc"/></span>
				 		</div>
				 	</div>
				  <!-- ABOUT US SECTION -->
				    <div class="about_wrap">
				    	<div class="about">
				    		<cms:module
				    			name="articles"
				    			action="show"
				    			text_id="about_us"
				    			template="parts/article.xml"
				    		/>
				    	</div>
				    </div>
				    <!-- SERVICES SECTION -->
				    <div class="service_wrap">
				    	<div class="service_item">
				    		<span><cms:text constant="service1"/></span>
				    	</div>
				    	<div class="service_item">
				    		<span><cms:text constant="service2"/></span>
				    	</div>
				    	<div class="service_item">
				    		<span><cms:text constant="service3"/></span>
				    	</div>
				    	<div class="service_item">
				    		<span><cms:text constant="service4"/></span>
				    	</div>
				    	<div class="service_item">
				    		<span><cms:text constant="service5"/></span>
				    	</div>				    	
				    </div>
				    <!-- FORM SECTION -->
				 	<div class="contact">
				 		<span><cms:text constant="form_caption"/></span>
				 			<cms:module 
				 				name="contact_form" 
				 				action="show" 
				 				text_id="contact_form"
				 			/>
				 	</div>
				 	<!-- FOOTER SECTION -->
				 	<footer>
				 		<div class="inner_wrap">
				 			<span><cms:text constant="header_middle"/></span>
				 			<span><cms:text constant="footer_title"/></span>
				 			<span><cms:text constant="footer_desc"/></span>
				 			<span><cms:desktop><cms:text constant="footer_phone"/></cms:desktop><cms:mobile><cms:text constant="phone_title"/></cms:mobile>
				 			<a href="#"><cms:text constant="phone"/></a> 
				 			</span>				 			
				 		</div>				 			 		
				 	</footer>
				 	<!-- COPYRIGHT SECTION -->
				 	<div class="copyright">
				 		<div class="copyright_text">
				 			<span><cms:text constant="copyright1"/></span>
				 			<a href="http://way2cu.com"><cms:text constant="way2cu"/></a>
				 			<span><cms:text constant="copyright2"/></span>
				 		</div>	
				 	</div>
			 </div>
		</body>
	</html>
</document>
